{
  "name": "Netflix Time Sync",
  "version": "2019.3.23",
  "description": "Easily sync the start times of Netflix shows with your friends",
  "permissions": ["declarativeContent", "tabs", "https://worldclockapi.com/*"],
  "content_scripts": [{
    "matches": ["http://*.netflix.com/*", "https://*.netflix.com/*"],
    "js": ["netflix-page-code.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icons/icon16.png",
      "32": "images/icons/icon32.png",
      "48": "images/icons/icon48.png",
      "128": "images/icons/icon128.png"
    }
  },
  "icons": {
    "16": "images/icons/icon16.png",
    "32": "images/icons/icon32.png",
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "manifest_version": 2
}
